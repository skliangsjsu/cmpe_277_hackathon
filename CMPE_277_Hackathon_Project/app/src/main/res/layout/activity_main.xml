<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Country Selection Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Country"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Indicator Selection Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Indicator"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/indicator_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Fetch Data Button -->
    <Button
        android:id="@+id/fetch_data_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch Data"
        android:layout_marginTop="24dp" />

    <!-- Line Chart for Data Visualization -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="24dp" />

    <!-- Prompt Input for Insights -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask a Question"
        android:padding="8dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/prompt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter prompt" />

    <Button
        android:id="@+id/prompt_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Prompt"
        android:layout_marginTop="8dp" />

    <!-- Response Display Area -->
    <TextView
        android:id="@+id/prompt_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response will appear here"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
